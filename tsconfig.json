{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@/components/*": [
        "components/*"
      ],
      "@/pages/*": [
        "pages/*"
      ],
      "@/styles/*": [
        "styles/*"
      ],
      "@/types/*": [
        "types/*"
      ],
      "@/models/*": [
        "models/*"
      ],
      "@/helpers/*": [
        "helpers/*"
      ],
      "@/store/*": [
        "store/*"
      ]
    },
    "typeRoots": [
      "./node_modules/@types"
    ],
    "types": [
      "@types/jest",
      "node",
      "@testing-library/jest-dom"
    ]
  },
  "include": [
    "next-env.d.ts",
    "types/**/*.ts",
    "types/next-auth.d.ts",
    "auth.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "__tests__/**/*",
    "**/*.spec.ts",
    "**/*.test.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
